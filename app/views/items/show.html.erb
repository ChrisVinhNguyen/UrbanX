<h1>Items#show</h1>
	<p>
	  <strong>Item name:</strong>
	  <%= @item.name %>
	</p>

	<h2>
		<%=  @item.description %>
	</h2>
	
	<h2>
		<%=  @item.category %>
	</h2>	

	<h2>
		<%=  @item.quantity %>
	</h2>	

	<h2>
		<%=  @item.condition %>
	</h2>	

	<h2>
		<%=  @item.value %>
	</h2>	
	<h2>Reviews</h2>
	<%= render @item.item_reviews %>

	<% if Transaction.where(borrower_id: current_user.id, item_id: @item.id).exists? %>
	<h2>Add a review:</h2>
	<%= render 'item_reviews/form' %>
	<%end%>

	<% if user_signed_in? %>

		<% if @item.user_id == current_user.id %>
			<%= link_to 'Edit', edit_item_path(@item) %> |
		<% end %> 
	<% end %> 
	<% if user_signed_in? %>

		<% if @item.user_id == current_user.id %>
			<%= link_to 'Transactions', item_transactions_path(@item) %> |
		<% end %> 
	<% end %> 

	<% if user_signed_in? %>
		<% if @item.user_id != current_user.id %>
				<% if @item.status == "available" %>
					<%= link_to 'Borrow', new_item_transaction_path(@item) %> |
				<%end%>
		<% end %> 
	<% end %> 
	<%= link_to 'Back', items_path %>
