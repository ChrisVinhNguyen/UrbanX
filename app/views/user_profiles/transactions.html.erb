<% if @transactions == nil %>
  <h1> Access denied </h1>
<% elsif @transactions.empty? %>
  <h1> You do not have any transactions </h1>
<% else %>
  <h1><%= pluralize(@transactions.count, "transaction") %></h1>

  <h1>Borrowed:</h1>
  <%= render 'transactions_table', :transactions => @transactions.where(:borrower_id => @current_user.id) %>

  <h1>Lent:</h1>
  <%= render 'transactions_table', :transactions => @transactions.where(:lender_id => @current_user.id) %>

<% end %>


<%= link_to 'Back', 'javascript:history.back()' %>